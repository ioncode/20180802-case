{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <h1>Book</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>Release_date</th>
                <td>{{ book.releaseDate ? book.releaseDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Catalog_date</th>
                <td>{{ book.catalogDate ? book.catalogDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Rate</th>
                <td>{{ book.rate }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('books') }}">back to list</a>

    <a href="{{ path('book_edit', {'id': book.id}) }}">edit</a>

    {{ include('book/_delete_form.html.twig') }}


{% endblock %}
