{% if ion_pager is defined and ion_pager.total_count > ion_pager.per_page %}
    <nav aria-label="{{ path(app.request.attributes.get('_route')) }} list navigation">
        <ul class="pagination justify-content-center">

            {% if  ion_pager.rendered_page_index > 1%}
                <li class="page-item">
                    <a class="page-link" href="{{ path(app.request.attributes.get('_route')) }}/{{ion_pager.rendered_page_index -1}}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            {% endif %}


            {#render previous li, if current > 1#}
            {% if  ion_pager.rendered_page_index > 1%}
                <li class="page-item"><a class="page-link" href="{{ path(app.request.attributes.get('_route')) }}/{{ion_pager.rendered_page_index -1}}">{{ion_pager.rendered_page_index -1}}</a></li>
            {% endif %}
            <li class="page-item active"><a class="page-link" href="{{ path(app.request.attributes.get('_route')) }}/{{ion_pager.rendered_page_index}}">{{ion_pager.rendered_page_index}}</a></li>

            {% if ion_pager.rendered_page_index*ion_pager.per_page < ion_pager.total_count %}
                <li class="page-item"><a class="page-link" href="{{ path(app.request.attributes.get('_route')) }}/{{ion_pager.rendered_page_index +1}}">{{ion_pager.rendered_page_index +1}}</a></li>
            {% endif %}
            {% if  ion_pager.rendered_page_index == 1 %}
                <li class="page-item"><a class="page-link" href="{{ path(app.request.attributes.get('_route')) }}/{{ion_pager.rendered_page_index +2}}">{{ion_pager.rendered_page_index +2}}</a></li>
            {% endif %}


            {% if ion_pager.rendered_page_index*ion_pager.per_page < ion_pager.total_count %}

                <li class="page-item">
                    {#<a class="page-link" href="#">Next</a>#}
                    <a class="page-link" href="{{ path(app.request.attributes.get('_route')) }}/{{ion_pager.rendered_page_index +1}}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    {#<a class="page-link" href="#">Next</a>#}
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}